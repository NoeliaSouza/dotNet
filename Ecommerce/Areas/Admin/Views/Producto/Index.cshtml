
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2>Lista de Productos</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Agregar Producto</a>
    </div>
</div>

<div class="mt-4 p-4 border rounded bg-light">
    <table id="dataTable" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Marca</th>
                <th>Precio</th>
                <th>Estado</th>
                <th class="text-center">Acción</th>
            </tr>
        </thead>
        

    </table>

</div>

@section Scripts{
    <script src="~/js/producto.js"></script>
}
